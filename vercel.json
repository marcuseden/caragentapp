{
  "version": 2,
  "builds": [
    {
      "src": "src/minimal_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["src/minimal_app.py"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(api/.+)",
      "dest": "src/minimal_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/minimal_app.py"
    }
  ],
  "functions": {
    "src/minimal_app.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
} 